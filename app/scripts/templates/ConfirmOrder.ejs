<h2>Confirm Your Order!</h2>

<% for(var i=0; i<pizza_types_in_order.length; i++) { %>

  <div class="pizza action-container" data-pizza-type-id="<%= pizza_types_in_order[i].type.id %>">
    <div class="action-container-button">
      <%= money(pizza_types_in_order[i].subtotal) %>
    </div>

    <%= pizza_types_in_order[i].quantity + 'x' %>

    <%= pizza_types_in_order[i].type.friendly_name %> <br />

    <select class="js-size-id">
      <% for(var j=0; j<pizza_sizes.length; j++) { %>
        <option value="<%= pizza_sizes[j].id %>" <%= (pizza_types_in_order[i].size_id==pizza_sizes[j].id) ? 'SELECTED' : '' %>><%= pizza_sizes[j].id %></option>
      <% } %>
    </select>

    <button class="js-add-pizza">+</button>
    <button class="js-remove-pizza">-</button>
  </div>

 
<% } %> 

<!-- Then, option to add more pizzas -->
<button class="action secondary js-select-additional">Add Something Else</button>

<!-- Other charges underneath, should be smaller/grey -->
<div class="money-extras">
  <div>
    <span class="label">Service Fee</span>
    <span class="value"><%= money(service_fee) %></span>
  </div>

  <div>
    <span class="label">
      Include Tip?
    </span>
    <span class="value">
      <button class="js-tip-plus">+</button>
      <button class="js-tip-minus">-</button>
      <%= money(selected_tip) %>
    </span>
  </div>

  <div class="total">
    <span class="label">Total</span>
    <span class="value"><%= money(grand_total) %></span>
  </div>

</div>


<div class="editable-block">
  <div class="edit js-change-restaurant"></div>

  <div class="label">From:</div>

  <div class="body">
    <%= restaurant.name %>
    <br />
    <%= restaurant.address.street %>
  </div>

</div>


<div class="editable-block">
  <div class="edit js-change-address"></div>

  <div class="label">To:</div>

  <div class="body">
    <%= delivery_address.street %>
    <br />
    <%= phone(customer.phone_number) %> 
  </div>

</div>



<div class="editable-block">
  <div class="edit js-change-card"></div>

  <div class="label">Charge:</div>

  <div class="body">
    Card ending in <%= cc_last_four %>
  </div>

</div>


<button type="button" class="action confirm js-confirm-order">Place Order!</button>
