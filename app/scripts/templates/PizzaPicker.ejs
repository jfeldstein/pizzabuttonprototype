<% if(in_progress_order != null) { %>
  <button type="button" class="action js-show-previous">Where's My Order?</button>
<% } %>

<h1>Pick Your Pizzas!</h1>

<% if(previous_order != null) { %>
  <div class="pizza-choice">
    <button type="button" class="action confirm js-confirm-same">Same As Last Time</button>
  </div>
<% } %>

<% for(var i=0; i<pizzas.length; i++) { %>
  <div data-pizza-type-id="<%= pizzas[i].id %>" class="pizza-choice <%= (pizzas[i].quantity >0) ? 'already-in-order' : '' %>">
    <button class="js-add-pizza action"><%= pizzas[i].friendly_name %></button>
  </div>
<% } %>
